<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.csumb.leon7534.airline">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LoggedInMainActivity"></activity>
        <activity android:name=".BookingActivity" />
        <activity android:name=".AvailableFlightsActivity" />
        <activity android:name=".ReserveSeatActivity" />
        <activity android:name=".FlightManagmentActivity" />
        <activity android:name=".AdminLoginActivity" />
        <activity android:name=".LoginActivity" />
        <activity android:name=".UserAccountActivity" />
        <activity android:name=".CreateAccountActivity" />
        <activity android:name=".CancelReservationActivity" />
        <activity android:name=".ManagementSystemActivity" />
        <activity android:name=".OptionsActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>